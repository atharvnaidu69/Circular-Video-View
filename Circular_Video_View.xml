<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- FrameLayout to center CircularVideoView with RippleBackground -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <!-- RippleBackground for animation effect -->
        <com.skyfishjy.library.RippleBackground
            android:id="@+id/rippleBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:rb_color="#BA68C8"
            app:rb_duration="3000"
            app:rb_radius="38dp"
            app:rb_rippleAmount="6"
            app:rb_scale="3.5" />

        <!-- CircularVideoView for circular video playback -->
        <com.example.weso_p01.CircularVideoView
            android:id="@+id/circularVideoView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:elevation="10dp" />
    </FrameLayout>

</RelativeLayout>
